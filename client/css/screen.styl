html, body
	width 100%
	height 100%

body
	font 14px/1.6 sans-serif
	background-color white
	color darkred

a
	color firebrick
	&:hover
		color red

h1, h2, h3, h4, h5, h6
	margin 0
	color firebrick

h1, h2, h3
	margin-bottom 30px

h4, h5, h6, p
	margin-bottom 15px

.nmg
	margin-bottom 0

.mgb15
	margin-bottom 15px

.mgb30
	margin-bottom 30px

.text-sm
	font-size 12px

.text-md
	font-size 18px

.text-indent
	text-indent 2em

.fit-background
	background-repeat no-repeat
	background-attachment fixed
	background-position center center
	background-size cover
