html, body
	width 100%
	height 100%

body
	font 14px/1.6 sans-serif
	background-color white
	color darkred

a
	color firebrick
	&:hover
		color red

h1, h2, h3, h4, h5, h6
	margin 0
	color firebrick

h1, h2, h3
	margin-bottom 30px

h4, h5, h6, p
	margin-bottom 15px

textarea
	resize none

.nmg
	margin-bottom 0

.mgb10
	margin-bottom 10px

.mgb15
	margin-bottom 15px

.mgb30
	margin-bottom 30px

.pdtb15
	padding-top 15px
	padding-bottom 15px

.pdtb30
	padding-top 30px
	padding-bottom 30px

.text-sm
	font-size 12px

.text-md
	font-size 18px

.text-indent
	text-indent 2em

.fit-background
	background-repeat no-repeat
	background-attachment fixed
	background-position center center
	background-size cover

.transparent-bg
	padding 30px
	border-radius 12px
	background-color rgba(255, 255, 100, .7)
